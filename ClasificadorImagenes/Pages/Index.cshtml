@page
@model IndexModel
@{
    ViewData["Title"] = "Clasificador por imagen";
}
<div class="container px-4 py-5" id="featured-3">
    <h2 class="pb-2 border-bottom">@ViewData["Title"]</h2>
    <div class="row g-4 py-5 row-cols-1 row-cols-lg-3">
        <div class="feature col">
            <div class="feature-icon d-inline-flex align-items-center justify-content-center text-bg-primary bg-gradient fs-2 mb-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" class="bi bi-file-earmark-arrow-up-fill text-primary" viewBox="0 0 16 16">
                    <path d="M9.293 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.707A1 1 0 0 0 13.707 4L10 .293A1 1 0 0 0 9.293 0M9.5 3.5v-2l3 3h-2a1 1 0 0 1-1-1M6.354 9.854a.5.5 0 0 1-.708-.708l2-2a.5.5 0 0 1 .708 0l2 2a.5.5 0 0 1-.708.708L8.5 8.707V12.5a.5.5 0 0 1-1 0V8.707z" />
                </svg>
            </div>
            <h3 class="fs-2 text-body-emphasis">Carga tu archivo</h3>
            <form method="post" enctype="multipart/form-data" id="formPrediction">
                <div class="form-group">
                    <label for="Upload">Sube una imagen:</label>
                    <input type="file" accept="image/png,image/jpeg,image/jpg,image/bmp" name="Upload" id="Upload" class="form-control" onchange="previewImage(event)" />
                </div>
                <div class="d-grid gap-2 p-1">
                    <button type="submit" class="btn btn-lg btn-success" id="btn" onclick="load()">Clasificar Imagen</button>
                </div>
            </form>
        </div>
        <div class="feature col">
            <div class="feature-icon d-inline-flex align-items-center justify-content-center text-bg-primary bg-gradient fs-2 mb-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" class="bi bi-image-fill text-primary" viewBox="0 0 16 16">
                    <path d="M.002 3a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2h-12a2 2 0 0 1-2-2zm1 9v1a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V9.5l-3.777-1.947a.5.5 0 0 0-.577.093l-3.71 3.71-2.66-1.772a.5.5 0 0 0-.63.062zm5-6.5a1.5 1.5 0 1 0-3 0 1.5 1.5 0 0 0 3 0" />
                </svg>
            </div>
            <h3 class="fs-2 text-body-emphasis">Visualízalo</h3>
            @if (Model.Predictions != null && Model.Predictions.Count > 0)
            {
                <img id="preview" src="@Model.ImageUrl" alt="Vista previa de la imagen" style="max-width: 100%; height: auto;" />
            }
            else
            {
                <img id="preview" src="#" alt="Vista previa de la imagen" style="max-width: 100%; height: auto;" />
            }
            
        </div>
        <div class="feature col">
            <div class="feature-icon d-inline-flex align-items-center justify-content-center text-bg-primary bg-gradient fs-2 mb-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" class="bi bi-clipboard-check-fill text-primary" viewBox="0 0 16 16">
                    <path d="M6.5 0A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0zm3 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5z" />
                    <path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1A2.5 2.5 0 0 1 9.5 5h-3A2.5 2.5 0 0 1 4 2.5zm6.854 7.354-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 0 1 .708-.708L7.5 10.793l2.646-2.647a.5.5 0 0 1 .708.708" />
                </svg>
            </div>
            <h3 class="fs-2 text-body-emphasis">Resultado de la Predicción!</h3>
            @if (Model.Predictions != null && Model.Predictions.Count > 0)
            {
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Etiqueta</th>
                            <th scope="col">Probabilidad</th>
                        </tr>
                    </thead>
                    <tbody class="table-group-divider">
                        @foreach (var prediction in Model.Predictions)
                        {
                            <tr>
                                <td><strong>@prediction.TagName:</strong></td>
                                <td>@String.Format("{0:P2}", prediction.Probability)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript">
        function previewImage(event) {
            var preview = document.getElementById('preview');
            var file = event.target.files[0];
            var reader = new FileReader();

            reader.onload = function () {
                preview.src = reader.result;
            }

            if (file) {
                reader.readAsDataURL(file);
            } else {
                preview.src = "#";
            }
        }

        function load() {
            var btn = document.getElementById("btn");
            btn.innerHTML = "<span class='spinner-grow spinner-grow-sm' role='status' aria-hidden='true' id='texto'></span>Clasificando...";
            btn.disabled = true;

            document.getElementById("formPrediction").submit();
        }
    </script>
}
